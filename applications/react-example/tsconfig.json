{
  "extends": "@we-mobius/tsconfig/tsconfig.monorepo.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "types": [
      "node",
      "react"
    ],
    "paths": {
      "@/*": ["./*"],
      "Src/*": ["./src/*"],
      "Statics/*": ["./src/statics/*"],
      "Styles/*": ["./src/statics/styles/*"],
      "Images/*": ["./src/statics/images/*"],
      "Elements/*": ["./src/elements/*"],
      "Components/*": ["./src/components/*"],
      "Views/*": ["./src/views/*"],
      "Services/*": ["./src/services/*"]
    }
  },
  "include": [
    "src/**/*",
    "env.d.ts",
    "vite.config.ts",
    "windi.config.ts"
  ],
  "exclude": [
    "**/node_modules",
    "**/bin",
    "**/dist",
    "**/build",
    "**/dev",
    "**/release"
  ]
}
