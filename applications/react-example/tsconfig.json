{
  "extends": "@we-mobius/tsconfig/tsconfig.monorepo.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "./src",
    "types": ["node", "react"],
    "paths": {
      "@/*": ["./*"],
      "Src/*": ["./src/*"],
      "Statics/*": ["./src/statics/*"],
      "Styles/*": ["./src/statics/styles/*"],
      "Images/*": ["./src/statics/images/*"],
      "Elements/*": ["./src/elements/*"],
      "Components/*": ["./src/components/*"],
      "Views/*": ["./src/views/*"],
      "Services/*": ["./src/services/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": [
    "**/node_modules",
    "**/bin",
    "**/dist",
    "**/build",
    "**/dev",
    "**/release"
  ]
}
