{
  "tags": ["type:engineering"],
  "namedInputs": {
    "default": ["{projectRoot}/**/*"]
  },
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "inputs": ["default"],
      "outputs": ["dist"],
      "dependsOn": ["^build"],
      "options": {
        "cwd": "engineerings/eslint-config-basic",
        "commands": ["pnpm exec tsx ./scripts/build.ts"],
        "parallel": false
      }
    }
  }
}
