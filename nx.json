{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "npmScope": "planet-matrix",
  "affected": {
    "defaultBase": "main"
  },
  "workspaceLayout": {
    "appsDir": "applications",
    "libsDir": "packages"
  },
  "implicitDependencies": {
    "package.json": {
      "dependencies": "*",
      "devDependencies": "*",
      "peerDependencies": "*",
      "scripts": "*"
    },
    "tsconfig.json": "*",
    "project.json": "*",
    "nx.json": "*"
  },
  "namedInputs": {
    "all": ["{projectRoot}/**/*", "!{projectRoot}/node_modules/**/*"],
    "dev": ["{projectRoot}/**/*", "!{projectRoot}/node_modules/**/*", "!{projectRoot}/dist/**/*"],
    "dist": ["{projectRoot}/dist/**/*"],
    "src": ["{projectRoot}/src/**/*"]
  },
  "targetDefaults": {
    "dev": {
      "dependsOn": [{"target": "build", "projects": "dependencies"}]
    },
    "build": {
      "dependsOn": [{"target": "build", "projects": "dependencies"}],
      "outputs": ["{projectRoot}/dist"]
    },
    "test": {
      "dependsOn": [{"target": "build", "projects": "self"}]
    }
  },
  "pluginsConfig": {
    "@nrwl/js": {
      "analyzeSourceFiles": true
    }
  },
  "cli": {
    "packageManager": "pnpm"
  },
  "generators": {},
  "tasksRunnerOptions": {
    "default": {
      "runner": "@nrwl/nx-cloud",
      "options": {
        "cacheableOperations": [
          "build",
          "lint",
          "test"
        ],
        "accessToken": "YzAzNTJmYjgtYWQ2ZS00ODMwLWI3MjktYWU3ZTJlYjMwNWZkfHJlYWQtd3JpdGU="
      }
    }
  }
}
