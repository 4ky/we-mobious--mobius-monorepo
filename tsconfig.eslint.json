{
  "extends": "./tsconfig.json",
  "include": [
    "*.ts",
    "src/**/*",
    "src/**/*.vue",
    "packages/**/*",
    "packages/**/*.vue",
    "elements/**/*",
    "elements/**/*.vue",
    "services/**/*",
    "services/**/*.vue",
    "components/**/*",
    "components/**/*.vue"
  ],
  "exclude": [
    "**/bin",
    "**/node_modules",
    "**/dist",
    "**/build",
    "**/dev",
    "**/release"
  ]
}
