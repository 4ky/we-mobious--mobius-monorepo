{
  "extends": "@we-mobius/tsconfig/tsconfig.monorepo.json",
  "compilerOptions": {
    "rootDir": ".",
    "rootDirs": [
      "packages/**/src",
      "utilities/**/src",
      "features/**/src",
      "applications/**/src",
      "engineerings/**/src",
      "elements/**/src",
      "services/**/src",
      "components/**/src"
    ],
    "types": ["node"]
  },
  "include": [
    "*.ts",
    "src/**/*",
    "src/**/*.vue",
    "packages/**/*",
    "packages/**/*.vue",
    "utilities/**/*",
    "utilities/**/*.vue",
    "features/**/*",
    "features/**/*.vue",
    "applications/**/*",
    "applications/**/*.vue",
    "engineerings/**/*",
    "engineerings/**/*.vue",
    "elements/**/*",
    "elements/**/*.vue",
    "services/**/*",
    "services/**/*.vue",
    "components/**/*",
    "components/**/*.vue"
  ],
  "exclude": [
    "**/node_modules",
    "**/bin",
    "**/dist",
    "**/build",
    "**/dev",
    "**/release"
  ]
}
